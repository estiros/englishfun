<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harunar.coba9.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bg2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang di English Fun"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to English Fun"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="italic"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/anak_sd"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btnhewan"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:onClick="hewan"
        android:text="Hewan (Animal)"
        android:textSize="18sp"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnbuah"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:onClick="buah"
        android:text="Buah (Fruit)"
        android:textSize="18sp"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnbunga"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:onClick="bunga"
        android:text="Bunga (Flower)"
        android:textSize="18sp"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnprofesi"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:onClick="profesi"
        android:text="Profesi (Profession)"
        android:textSize="18sp"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btntubuh"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:onClick="tubuh"
        android:text="Anngota Tubuh (Part of Body)"
        android:textSize="18sp"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />
</LinearLayout>
